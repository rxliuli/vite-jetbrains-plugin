<idea-plugin>
    <id>com.rxliuli.vite-jetbrains-plugin</id>
    <name>ViteJetbrainsPlugin</name>
    <vendor email="rxliuli@gmail.com" url="https://github.com/rxliuli/create-vite-project">com.rxliuli</vendor>

    <description>vite 脚手架在 jetbrains ide 中的集成，主要负责直接使用 ide 的引导面板创建一个项目。</description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>JavaScript</depends>

    <extensions defaultExtensionNs="com.intellij">
        <directoryProjectGenerator
                implementation="com.rxliuli.vite.cli.ViteCliProjectGenerator"/>  <!-- works in WebStorm and other SmallIDEs -->
        <projectTemplatesFactory
                implementation="com.rxliuli.vite.cli.ViteProjectTemplateFactory"/> <!-- works in IntelliJ IDEA -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>